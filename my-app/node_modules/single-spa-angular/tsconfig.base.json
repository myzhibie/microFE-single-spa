{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "skipLibCheck": false,
    "sourceMap": true,
    "sourceRoot": ".",
    "strictNullChecks": true,
    "lib": [
      "dom",
      "es2018"
    ],
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "outDir": "./lib"
  },
  "exclude": [
    "src/**/*.spec.ts"
  ]
}